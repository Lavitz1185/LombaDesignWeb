@using System.Globalization
<i @attributes="AdditionalAttributes" class="@CssClass()" style="font-size:@(Size.ToString(CultureInfo.InvariantCulture))rem"></i>

@code {
    [Parameter]
    public string Icon { get; set; } = "";

    [Parameter]
    public IconType Type { get; set; }

    [Parameter]
    public double Size { get; set; } = 1;

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string TypeToString() =>
        Type switch
        {
            IconType.Line => "line",
            IconType.Fill => "fill",
            _ => "line"
        };

    private string CssClass() => $"ri-{Icon}-{TypeToString()}";
}