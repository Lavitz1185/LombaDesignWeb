@inject OlehOlehNTT.Web.Authentication.SignInManager SignInManager

<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity?.Name!
        
        <button @onclick="() => SignInManager.SignOut()" class="nav-link btn btn-link">Log out</button>
    </Authorized>
    <NotAuthorized>
        <a href="/login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
